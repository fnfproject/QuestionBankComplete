@page "/"
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1>Welcome to the Question Bank</h1>
            <p>Select your login type:</p>
            <div class="d-grid gap-3">
                <button class="btn btn-primary btn-lg" @onclick="NavigateToAdmin">Admin Login</button>
                <button class="btn btn-secondary btn-lg" @onclick="NavigateToTrainer">Trainer Login</button>
                <button class="btn btn-success btn-lg" @onclick="NavigateToTrainee">Trainee Login</button>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToAdmin()
    {
        Navigation.NavigateTo("/admin-login"); // Replace with your actual admin login page route
    }

    private void NavigateToTrainer()
    {
        Navigation.NavigateTo("/login"); // Replace with your actual trainer login page route
    }

    private void NavigateToTrainee()
    {
        Navigation.NavigateTo("http://localhost:5072/Login"); // Replace with your actual trainee login page route
    }
}