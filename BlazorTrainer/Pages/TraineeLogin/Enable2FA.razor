@page "/enable-2fa"
@inject HttpClient Http
@using BlazorTrainer.Models
@using System.Text
@using System.Text.Json
@using System.Net.Http
@using System.Net.Http.Headers

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center">Enable Two-Factor Authentication</h3>

                    <EditForm Model="@enable2FAModel" OnValidSubmit="HandleEnable2FA">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <InputText id="username" class="form-control" @bind-Value="enable2FAModel.Username" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Enable 2FA</button>
                    </EditForm>

                    @if (QrCodeSrc != null)
                    {
                        <div class="text-center mt-3">
                            <h4>Scan this QR Code with your authenticator app:</h4>
                            <img src="@QrCodeSrc" alt="QR Code" class="img-fluid" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Enable2FAModel enable2FAModel = new Enable2FAModel();
    private string QrCodeSrc;

    private async Task HandleEnable2FA()
    {
        var requestContent = new StringContent(
            JsonSerializer.Serialize(enable2FAModel),
            Encoding.UTF8,
            "application/json"
        );

        var response = await Http.PostAsync("api/Trainer/enable-2fa", requestContent);

        if (response.IsSuccessStatusCode)
        {
            var imageBytes = await response.Content.ReadAsByteArrayAsync();
            QrCodeSrc = $"data:image/png;base64,{Convert.ToBase64String(imageBytes)}";
        }
        else
        {
            // Handle error (you can log it or show an error message)
        }
    }
}