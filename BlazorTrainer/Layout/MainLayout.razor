@inherits LayoutComponentBase

<div class="container-fluid d-flex flex-column min-vh-100">
    <!-- Custom Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">QuestionBankClient</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item mx-2">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item mx-2">
                    <NavLink class="nav-link" href="Login">Login</NavLink>
                </li>
                <li class="nav-item mx-2">
                    <NavLink class="nav-link" href="Register">Register</NavLink>
                </li>
                <li class="nav-item mx-2">
                    <NavLink class="nav-link" href="enable-2fa">Enable 2FA</NavLink>
                </li>
                <li class="nav-item mx-2">
                    <NavLink class="nav-link" href="verify-2fa">Verify 2FA</NavLink>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page Content -->
    <main class="flex-grow-1">
        <div class="container mt-4">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year QuestionBankClient. All rights reserved.
    </footer>
</div>