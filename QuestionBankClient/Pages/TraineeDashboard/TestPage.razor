@page "/test/{TestId:int}"
@inject HttpClient Http
@inject NavigationManager Navigation
@using BlazorTrainee.Dtos

<div class="container">
    <h3 class="text-center my-4 fade-in">Test</h3>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4 fade-in shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-question-circle me-2"></i>Questions</h4>
                </div>
                <div class="card-body">
                    @if (test == null)
                    {
                        <p>Loading...</p>
                    }
                    else
                    {
                        @foreach (var question in test.Questions)
                        {
                            <div class="mb-3">
                                <h5>@question.QuestionText</h5>
                                <!-- Add options or input fields for answers here -->
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TestId { get; set; }
    private TestDto test;

    protected override async Task OnInitializedAsync()
    {
        await LoadTest();
    }

    private async Task LoadTest()
    {
        try
        {
            test = await Http.GetFromJsonAsync<TestDto>($"http://localhost:5109/api/Test/{TestId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading test: {ex.Message}");
        }
    }
}
