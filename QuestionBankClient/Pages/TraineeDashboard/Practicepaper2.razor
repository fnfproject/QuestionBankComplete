@page "/Practicepaper2"

<h3 class="text-center my-4 fade-in">Practice Paper 2: .NET Core</h3>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="shadow-sm p-3 mb-4 bg-white rounded fade-in">
                <h4><i class="bi bi-question-circle"></i> Questions</h4>
                <ul class="list-group">
                    @foreach (var question in DotNetCoreQuestions)
                    {
                        <li class="list-group-item">
                            <strong>@question.Text</strong>
                            <div class="mt-2">
                                @foreach (var option in question.Options)
                                {
                                    <div>@option</div>
                                }
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-12 text-center">
        <button class="btn btn-primary" onclick="window.print()">Download</button>
    </div>
</div>

@code {
    public class Question
    {
        public string Text { get; set; }
        public List<string> Options { get; set; }

        public Question(string text, List<string> options)
        {
            Text = text;
            Options = options;
        }
    }

    private List<Question> DotNetCoreQuestions = new List<Question>
    {
        new Question("What is .NET Core?", new List<string> { "A cloud platform", "A cross-platform framework", "A web server", "A database system" }),
        new Question("Which command is used to create a new .NET Core project?", new List<string> { "dotnet new", "dotnet build", "dotnet run", "dotnet init" }),
        new Question("What is the default web server used in .NET Core applications?", new List<string> { "Kestrel", "IIS", "Apache", "Nginx" }),
        new Question("Which of the following is used to manage dependencies in .NET Core?", new List<string> { "NuGet", "npm", "Maven", "Gradle" }),
        new Question("What is the purpose of the Startup class in a .NET Core application?", new List<string> { "To configure services and middleware", "To define the database schema", "To handle user authentication", "To manage application settings" }),
        new Question("Which method in the Startup class is used to configure services?", new List<string> { "ConfigureServices", "Configure", "InitServices", "RegisterServices" }),
        new Question("What does the 'app.UseRouting()' method do in .NET Core?", new List<string> { "Enables routing", "Configures middleware", "Sets up dependency injection", "Handles exceptions" }),
        new Question("Which database provider is commonly used with Entity Framework Core?", new List<string> { "SQL Server", "Oracle", "MySQL", "MongoDB" }),
        new Question("What is the purpose of the 'app.UseEndpoints()' method?", new List<string> { "Maps endpoints to routes", "Registers services", "Configures middleware", "Handles authentication" }),
        new Question("Which command is used to run a .NET Core application?", new List<string> { "dotnet run", "dotnet start", "dotnet execute", "dotnet deploy" }),
    };
}