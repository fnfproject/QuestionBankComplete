@page "/Practicepaper3"

<h3 class="text-center my-4 fade-in">Practice Paper 3: Angular</h3>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="shadow-sm p-3 mb-4 bg-white rounded fade-in">
                <h4><i class="bi bi-question-circle"></i> Questions</h4>
                <ul class="list-group">
                    @foreach (var question in AngularQuestions)
                    {
                        <li class="list-group-item">
                            <strong>@question.Text</strong>
                            <div class="mt-2">
                                @foreach (var option in question.Options)
                                {
                                    <div>@option</div>
                                }
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-12 text-center">
        <button class="btn btn-primary" onclick="window.print()">Download</button>
    </div>
</div>

@code {
    public class Question
    {
        public string Text { get; set; }
        public List<string> Options { get; set; }

        public Question(string text, List<string> options)
        {
            Text = text;
            Options = options;
        }
    }

    private List<Question> AngularQuestions = new List<Question>
    {
        new Question("What is Angular?", new List<string> { "A front-end framework", "A back-end framework", "A database", "A programming language" }),
        new Question("Which command is used to create a new Angular project?", new List<string> { "ng new", "ng create", "ng init", "ng start" }),
        new Question("What is the purpose of the 'ng serve' command?", new List<string> { "To build and run the Angular application", "To start the server", "To create a new project", "To deploy the application" }),
        new Question("Which of the following is a decorator used in Angular?", new List<string> { "@Component", "@Service", "@Inject", "@Module" }),
        new Question("What is the purpose of the Angular CLI?", new List<string> { "To streamline development tasks", "To manage database connections", "To build mobile apps", "To create unit tests" }),
        new Question("Which file contains the main module of an Angular application?", new List<string> { "app.module.ts", "main.ts", "index.html", "angular.json" }),
        new Question("How do you create a service in Angular?", new List<string> { "ng generate service", "ng create service", "ng new service", "ng make service" }),
        new Question("Which directive is used to bind data in Angular?", new List<string> { "ngModel", "ngBind", "ngFor", "ngIf" }),
        new Question("What is the purpose of the Angular Router?", new List<string> { "To manage navigation and routing", "To create APIs", "To connect to databases", "To handle forms" }),
        new Question("Which lifecycle hook is called after the component's view has been initialized?", new List<string> { "ngAfterViewInit", "ngOnInit", "ngAfterContentInit", "ngDoCheck" }),
    };
}
