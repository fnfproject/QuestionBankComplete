@page "/"
@inject NavigationManager Navigation
@inject RoleService RoleService
@using BlazorTrainee.Model

<!-- Header Section -->
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><i class="bi bi-pc-display-horizontal"></i> QuestionBankClient</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            User
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content Section -->
<section class="main-content d-flex align-items-center justify-content-center text-center text-blue">
    <div class="container">
        <h1 class="display-4 fw-bold text-blue">Welcome to QuestionBankClient</h1>
        <p class="lead text-blue">Please select your role:</p>
        <div class="mt-4 d-flex justify-content-center flex-wrap">
            <button class="btn custom-btn btn-primary me-2 mb-2" @onclick="NavigateToAdminLogin"><i class="bi bi-shield-lock"></i> Admin Login</button>
            <button class="btn custom-btn btn-secondary me-2 mb-2" @onclick='() => SelectRole("Trainer")'><i class="bi bi-person-check"></i> Trainer Login</button>
            <button class="btn custom-btn btn-success mb-2" @onclick='() => SelectRole("Trainee")'><i class="bi bi-person"></i> Trainee Login</button>
        </div>
        <div class="mt-5">
            <a href="#about" class="btn btn-light btn-lg"><i class="bi bi-info-circle"></i> Learn More</a>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center">About Us</h2>
        <p class="text-center">QuestionBankClient is a comprehensive solution for managing quizzes and tests efficiently. Our platform allows trainers to create, share, and evaluate questions with ease. We are dedicated to providing a seamless and effective user experience.</p>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center">Features</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <i class="bi bi-clipboard-data icon-lg display-1 mb-3"></i>
                    <h4>Manage Questions</h4>
                    <p>Easily add, update, and delete questions to your question bank.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <i class="bi bi-bar-chart icon-lg display-1 mb-3"></i>
                    <h4>Analyze Results</h4>
                    <p>Get detailed analytics on test performance to help improve learning outcomes.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <i class="bi bi-share icon-lg display-1 mb-3"></i>
                    <h4>Share Tests</h4>
                    <p>Generate links to share tests directly with trainees and collect responses easily.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center">Contact Us</h2>
        <p class="text-center">Have any questions? Reach out to us at <a href="mailto:support@questionbankclient.com">support@questionbankclient.com</a>.</p>
        <div class="text-center">
            <a href="https://facebook.com" target="_blank" class="btn btn-primary btn-sm me-2"><i class="bi bi-facebook"></i> Facebook</a>
            <a href="https://twitter.com" target="_blank" class="btn btn-info btn-sm me-2"><i class="bi bi-twitter"></i> Twitter</a>
            <a href="https://linkedin.com" target="_blank" class="btn btn-primary btn-sm"><i class="bi bi-linkedin"></i> LinkedIn</a>
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer class="footer bg-dark text-white py-4">
    <div class="container text-center">
        <span>© 2024 QuestionBankClient. All rights reserved.</span>
        <div class="mt-2">
            <a href="#about" class="text-white me-2">About</a>
            <a href="#features" class="text-white me-2">Features</a>
            <a href="#contact" class="text-white">Contact</a>
        </div>
    </div>
</footer>

<!-- Custom CSS -->
<style>
    /* Prevent horizontal scrolling */
    body, html {
        overflow-x: hidden;
    }

    /* Ensure container elements fit within the viewport */
    .container, .container-fluid {
        max-width: 100%;
    }

    /* Custom button styles */
    .custom-btn {
        padding: 15px 25px;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .custom-btn i {
            margin-right: 8px;
            font-size: 1.4rem;
        }

        .custom-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    /* Main Content Section */
    .main-content {
        width: 100vw;
        height: 93vh;
        background-image: url('/Images/newone2.gif');
        background-size: cover;
        background-position: center;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    /* Features Section Animations */
    .feature-item {
        transition: all 0.3s ease-in-out;
    }

        .feature-item:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }
</style>

@code {
    private void SelectRole(string role)
    {
        RoleService.SetRole(role); // Save selected role
        Navigation.NavigateTo($"/{role}login");
    }

    private void NavigateToAdminLogin()
    {
        Navigation.NavigateTo("http://localhost:5226");
    }
}
